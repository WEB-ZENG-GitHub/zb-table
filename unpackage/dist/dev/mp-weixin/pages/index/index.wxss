
view,
label,
swiper-item,
scroll-view {
  display:flex;
  flex-direction:column;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
view,
image,
input,
scroll-view,
swiper,
swiper-item,
text,
textarea,
video {
  position: relative;
  border: 0px solid #000000;
  box-sizing: border-box;
}
swiper-item {
  position: absolute;
}
button {
  margin: 0;
}


.m-layout{
	position: absolute;
	right: 0;
	bottom: 0;
	left: 0;
	top: 0;
}
.m-layout-header{
	height: 80rpx;
	display: flex;
	flex-direction: row;
	padding-left: 8px;
	padding-right: 8px;
	justify-content: space-between;
	align-items: center;
}

